<% include tiles/header %>
<% include tiles/top %>

<div class="container">
    <div class="row">
      
      <div id="sidebar" class="col-md-4">
          <% include tiles/sidebar %>
      </div>
      <div class="col-md-5">
          <h3 class="my-4">Logowanie</h3>
          <% if(form.errorMsg !== "") { %>
            <div class="alert alert-danger">
                <%= form.errorMsg %><br />
            </div>
          <% } %>
          <form action="" method="post">
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" name="email" class="form-control" id="email" placeholder="Email" value="<%= form.email %>">
            </div>
            <div class="form-group">
                <label for="password">Hasło</label>
                <input type="password" name="password" class="form-control" id="password" placeholder="Hasło">
            </div>
            <button type="submit" class="btn btn-primary">Zaloguj się</button>
          </form>
      
      </div>
    </div>
  </div>

<% include tiles/footerScript %>

